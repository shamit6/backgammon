{
  "name": "backgammon",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start-app-dev": "webpack-dev-server --config webpack.config.js  --progress --inline",
    "start-dev": "cross-env NODE_ENV=development babel-node ./dev/server/index.js",
    "start-dev-nodemon": "cross-env NODE_ENV=development nodemon ./dev/server/index.js --exec babel-node",
    "clean": "cross-env rmdir /s /q .\\output\\",
    "build-app": "cross-env NODE_ENV=production webpack --config webpack.config.prod.js --progress --colors",
    "build-server": "babel dev -d output --ignore app,content --copy-files",
    "start": "cross-env PORT=4445 NODE_ENV=production node ./output/server/index.js",
    "all": "npm run clean && npm run build-app && npm run build-server && npm run start"
  },
  "author": "Amit Shalev (shamit6)",
  "license": "ISC",
  "dependencies": {
    "@rxjs/rx": "^4.1.0",
    "apollo-server-express": "^1.1.0",
    "axios": "^0.16.2",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.0",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-2": "^6.24.1",
    "body-parser": "^1.17.2",
    "chart.js": "^2.6.0",
    "classnames": "^2.2.5",
    "cookie-parser": "^1.4.3",
    "express": "^4.15.2",
    "express-session": "^1.15.3",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.2",
    "graphql": "^0.10.5",
    "graphql-tools": "^1.2.1",
    "html-webpack-plugin": "^2.28.0",
    "json-loader": "^0.5.4",
    "nodemon": "^1.11.0",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "react": "^15.4.2",
    "react-apollo": "^1.4.14",
    "react-chartjs": "^0.8.0",
    "react-chartjs-2": "^2.5.5",
    "react-dnd": "^2.3.0",
    "react-dnd-html5-backend": "^2.3.0",
    "react-dnd-touch-backend": "^0.3.10",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.3",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "react-validation": "^2.10.9",
    "redux-logger": "^3.0.6",
    "semantic-ui-css": "^2.2.10",
    "semantic-ui-react": "^0.70.0",
    "socket.io": "^1.7.3",
    "socket.io-client": "^1.7.3",
    "webpack": "^2.3.2",
    "webpack-dev-server": "^2.4.2"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^4.0.0",
    "css-loader": "^0.28.4",
    "postcss-loader": "^2.0.6",
    "precss": "^2.0.0",
    "react-hot-loader": "^3.0.0-beta.7",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack-hot-middleware": "^2.18.0"
  },
  "description": "Online backgammon game. Play against the top players in the world!"
}
